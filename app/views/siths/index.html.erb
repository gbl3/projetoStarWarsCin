<h1>Siths</h1>

<table>
  <thead>
    <tr>
      <th>Id usuario</th>
      <th>Funcao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @siths.each do |sith| %>
      <tr>
        <td><%= sith.id_usuario %></td>
        <td><%= sith.funcao %></td>
        <td><%= link_to 'Show', sith %></td>
        <td><%= link_to 'Edit', edit_sith_path(sith) %></td>
        <td><%= link_to 'Destroy', sith, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

