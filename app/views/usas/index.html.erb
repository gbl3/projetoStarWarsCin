<p id="notice"><%= notice %></p>

<h1>Usas</h1>

<table>
  <thead>
    <tr>
      <th>Id usuario</th>
      <th>Id fabricacao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usas.each do |usa| %>
      <tr>
        <td><%= usa.id_usuario %></td>
        <td><%= usa.id_fabricacao %></td>
        <td><%= link_to 'Show', usa %></td>
        <td><%= link_to 'Edit', edit_usa_path(usa) %></td>
        <td><%= link_to 'Destroy', usa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

